{% extends 'base.html.twig' %}

{% block body %}
    <div class="jumbotron">
        <div class="container">
            <h2>Usuario</h2>

            <table>
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ usuario.id }}</td>
                    </tr>
                    <tr>
                        <th>Username</th>
                        <td>{{ usuario.username }}</td>
                    </tr>
                    <tr>
                        <th>Password</th>
                        <td>{{ usuario.password|slice(0,18)}}</td>
                    </tr>
                </tbody>
            </table>

            <ul>
                <li>
                    <a href="{{ path('admin_user_index') }}">Back to the list</a>
                </li>
                <li>
                    <a href="{{ path('admin_user_edit', { 'id': usuario.id }) }}">Edit</a>
                </li>
                <li>
                    {{ form_start(delete_form) }}
                    <input type="submit" value="Delete">
                    {{ form_end(delete_form) }}
                </li>
            </ul>
        </div>
    </div>
{% endblock %}
